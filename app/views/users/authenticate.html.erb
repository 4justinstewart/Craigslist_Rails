<h1>Login</h1>

<%= form_for :user, url: users_login_path do |f| %>
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.password_field :password, placeholder: 'Password' %>
  <%= f.submit 'Login!' %>
<% end %>

<h3>or ...</h3>
<h1>Sign Up</h1>
<%= form_for :user, url: users_signup_path do |f| %>
  <%= f.email_field :email, placeholder: 'Email' %>
  <%= f.password_field :password, placeholder: 'Password' %>
  <%= f.submit 'Sign Up!' %>
<% end %>




